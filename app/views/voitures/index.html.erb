<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Vos voitures", voitures_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Vos Reservations", vos_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Vos Locations", vos_locations_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">
				
				<% @voitures.each do |voiture| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag voiture.photos[0].image.url(:thumb) if voiture.photos.length > 0 %>
						</div>		
						<div class="col-md-7">
							<h4><%= "#{voiture.marque} #{voiture.modele}" %></h4>
						</div>		
						<div class="col-md-3 right">
							<%= link_to "Update", edit_voiture_path(voiture), class: "btn btn-primary" %>
						</div>		
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
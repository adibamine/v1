<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

  <h2>Modifier votre mot de passe</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/devisemes' %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "Nouveau mot de passe" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirmer nouveau mot de passe" %>
    </div>

    <%= f.submit "Changer mot de passe", :class => "btn btn-danger" %>
  <% end %>

  </div>
</div>
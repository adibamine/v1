<div class="row">
	<div class="col-md-3">
		<div class="center">
			<%= image_tag avatar_url(@user), class: "avatar-full" %>
		<% if current_user != @user %>
		<div class="rowÃ¨-space-2">
			<%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary wide" %>
		</div>
		<% end %>
		<br>
	</div>
		<div class="panel panel-default">
			<div class="panel-heading">Verification</div>	
			<div class="panel-body">
				Email Address<br>
				Phone Number
			</div>
		</div>
	</div>

	<div class="col-md-9">
		<h2><%= @user.lastname %> <%= @user.firstname %></h2>

		<div class="description row-space-3">
			<%= @user.description %>
		</div>

		<h4>Voitures (<%= @voitures.length %>)</h4><br>

		<div class="row">
			<% @voitures.each do |voiture| %>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag voiture.photos[0].image.url(:medium) %>
						</div>
						<div class="panel-body">
							<%= link_to "#{voiture.marque} #{voiture.modele}", voiture %>
						</div>
					</div>
				</div>
			<% end %>
		</div>

		<h4>Reviews</h4><br>
		<% @voitures.each do |voiture| %>
			<% if !voiture.reviews.blank? %>
				<% voiture.reviews.each do |review| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag avatar_url(review.user), class: "img-circle avatar-medium" %><br>
							<%= review.user.firstname %>
						</div>
						<div class)"col-md-10">
							<%= link_to voiture.marque, voiture %><br>
							<%= review.comment %><br>
							<%= review.created_at.strftime("%v") %>
						</div>
					</div>
				<% end %>
				<% end %>
				<% end %>
</div>
</div>